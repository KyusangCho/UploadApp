@page "/PageLogin"
@model Intsa.Pages.Profile.PageLoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>INT, S.A. | Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <base href="~/" />
    <!-- ================== BEGIN core-css ================== -->
    <link href="/css/bootstrap4.css" rel="stylesheet" />
    <link href="/templates/dashboard/assets/css/app.min.css" rel="stylesheet" />
    <script src="_content/MatBlazor/dist/matBlazor.js"></script>
    <link href="_content/MatBlazor/dist/matBlazor.css" rel="stylesheet" />
    <!-- ================== END core-css ================== -->

</head>
<body>
    <!-- BEGIN #app -->
    <div id="app" class="app app-full-height app-without-header">
        <!-- BEGIN login -->
        <div class="login">
            <!-- BEGIN login-content -->
            <div class="login-content">
                <form action="/Dashboard" method="GET" name="login_form">
                    <h1 class="text-center">Sign In</h1>
                    <div class="text-muted text-center mb-4">
                        For your protection, please verify your identity.
                    </div>
                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="text" class="form-control form-control-lg fs-15px" value="" placeholder="username@intsa.net" />
                    </div>
                    <div class="form-group">
                        <div class="d-flex">
                            <label>Password</label>
                            <a href="#" class="ml-auto text-muted">Forgot password?</a>
                        </div>
                        <input type="password" class="form-control form-control-lg fs-15px" value="" placeholder="Enter your password" />
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input class="custom-control-input" type="checkbox" value="" id="customCheck1" />
                            <label class="custom-control-label fw-500" for="customCheck1">Remember me</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="d-flex">
                            <label>OTP Code</label>
                        </div>
                        <div class="row">
                            <input type="text" maxlength="1" class="form-control width-40 fs-15px mr-3px text-center" id="otp1" />
                            <input type="text" maxlength="1" class="form-control width-40 fs-15px mr-3px text-center" id="otp2" />
                            <input type="text" maxlength="1" class="form-control width-40 fs-15px mr-3px text-center" id="otp3" />
                            <input type="text" maxlength="1" class="form-control width-40 fs-15px mr-3px text-center" id="otp4" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block fw-500 mb-3">Sign In</button>
                    <!--<div class="text-center text-muted">
            Don't have an account yet? <a href="page_register.html">Sign up</a>.
        </div>-->
                </form>
            </div>
            <!-- END login-content -->
        </div>
        <!-- END login -->
        <!-- BEGIN btn-scroll-top -->
        <a href="#" data-click="scroll-top" class="btn-scroll-top fade"><i class="fa fa-arrow-up"></i></a>
        <!-- END btn-scroll-top -->
    </div>
    <!-- END #app -->
    <!-- ================== BEGIN core-js ================== -->
    <script src="/templates/dashboard/assets/js/app.min.js"></script>
    <!-- ================== END core-js ================== -->

</body>
</html>
